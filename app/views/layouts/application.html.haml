!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Habithacks
    %link{href: '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css', type: 'text/css', rel: 'stylesheet'}
    %link{href: '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', type: 'text/css', rel: 'stylesheet'}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    %script{src: 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'}
    %script{src: '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'}
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if user_signed_in?
      .navbar-default
        .container
          = link_to "Habit Hacks", root_path, class: 'navbar-brand'
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to "Home", root_path
            %li
              = link_to "Profile", profile_path
            %li
              = link_to "Logout", logout_path
    .container.text-center
      .row
        .col-sm-10.col-sm-offset-1
          = yield
